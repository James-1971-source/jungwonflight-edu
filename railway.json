{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "variables": {
    "NODE_VERSION": "18"
  },
  "deploy": {
    "startCommand": "npm start",
    "releaseCommand": "npm run db:push && npm run build:all",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 